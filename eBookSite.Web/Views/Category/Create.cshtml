@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Category</h2>
            <hr/>
        </div>
        <div class="mb-3 row p-1">
            <label>Category Name</label>
            <input type="text" class="form-control"/>
        </div> 
        <div class="mb-3 row p-1">
            <label>Display Order</label>
            <input type="text" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6">
                 <button type="submit" class="btn btn-primary"style="width:150px;">Add</button>
            </div>
            <div class="col-6 col-md-3">
               <a asp-action="Index" asp-controller="Category" class="btn btn-secondary border form-control">Go Back</a>
            </div>

        </div>
    </div>
</form>