@model List<Category>
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            Category List
        </div>
        <div class="col-6 text-end pb-3">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>   Add New Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.OrderBy(m=>m.DisplayOrder))
            {
                <tr>
                    <td>
                       @item.Name
                    </td>
                    <td>
                        @item.DisplayOrder
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>